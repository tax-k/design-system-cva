{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib", // lib폴더에 ts 타입 속성을 빌드한다.
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "removeComments": true,
    "typeRoots": ["node_modules/@types", "index.d.ts"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "extends": "./tsconfig.path.json",
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.scss",
    "*.scss",
    "**/*.css",
    "*.css",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "lib",
    "example",
    "rollup.config.js",
    ".storybook",
    "**/*.stories.tsx"
  ]
}
